<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#10101C"
        >
    <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="0"
            android:layout_weight="0"
            />
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            >
        <TableRow
                android:layout_weight="1"
                android:layout_marginBottom="3dp"
                >
            <Button
                    android:text="AC"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="+/-"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="%"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="/"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_accent"
                    />
        </TableRow>
        <TableRow
                android:layout_marginBottom="3dp"
                android:layout_weight="1">

            <Button
                    android:text="7"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="X"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_accent"
                    />
        </TableRow>
        <TableRow
                android:layout_marginBottom="3dp"
                android:layout_weight="1">

            <Button
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
                    />

            <Button
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
                    />
            <Button
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_accent"
                        />
        </TableRow>
        <TableRow
                android:layout_marginBottom="3dp"
                android:layout_weight="1">

                <Button
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_neutral_light"
                        android:layout_marginRight="3dp"
                        />

                <Button
                        android:text="2"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_neutral_light"
                        android:layout_marginRight="3dp"
                        />

                <Button
                        android:text="3"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_neutral_light"
                        android:layout_marginRight="3dp"
                        />

                <Button
                        android:text="+"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:background="@drawable/button_accent"
                        />
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
    >

            <Button
                    android:text="0"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
            />
            <Button
                    android:text="."
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_neutral_light"
                    android:layout_marginRight="3dp"
            />
            <Button
                    android:text="="
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="@drawable/button_accent"
            />
    </LinearLayout>


</LinearLayout>